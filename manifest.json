{
  "manifest_version": 2,
  "name": "DarkTube",
  "version": "0.3.2",
  "description": "Forces YouTube to use dark theme.",
  "developer": {
    "name": "Ezerous",
    "url": "https://github.com/Ezerous"
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "css": ["css/dark-theme-min.css"]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "*://*.youtube.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
